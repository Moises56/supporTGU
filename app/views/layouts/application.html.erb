    <%= javascript_include_tag 'application', 'data-turbolinks-track': 'reload' %>

    <%= stylesheet_link_tag "sb-admin-2.min" %>
    <%= stylesheet_link_tag "hover.css" %>
    <%= stylesheet_link_tag "style.css" %>


  </head>

  <body class="is-boxed has-animations">
  
    <%= render "tickets/nav" %>
     <div class="container-fluid">

      <!-- Messages from Users-->
         <% if notice%>
          <div class="alert alert-success alert-dismissible fade show mt-2" role="alert">
            <strong><%= notice %></strong>
            <button type="button" class="btn btn-close" data-bs-dismiss="alert" aria-label="Close">&times;</button>
          </div>
        <% end%>

          <% if alert%>
          <div class="alert alert-danger alert-dismissible fade show mt-2" role="alert">
            <strong><%= alert %></strong>
            <button type="button" class="btn btn-close" data-bs-dismiss="alert" aria-label="Close">&times;</button>
          </div>
        <% end%>
    
    <!-- Messages from tickets-->
        <% if flash[:success]%>
          <div class="alert alert-success alert-dismissible fade show mt-2" role="alert">
            Ticket creado, el numero de Ticket es: <strong><%= flash[:success] %></strong> Apuntalo para verificar el estado
            <button type="button" class="btn btn-close" data-bs-dismiss="alert" aria-label="Close">&times;</button>
          </div>
        <% end%>

        <% if flash[:info]%>
          <div class="alert alert-warning alert-dismissible fade show mt-2" role="alert">
            Ticket actualizado, el numero de Ticket es: <strong><%= flash[:info] %></strong> Apuntalo para verificar el estado
            <button type="button" class="btn btn-close" data-bs-dismiss="alert" aria-label="Close">&times;</button>
          </div>
        <% end%>

        <% if flash[:failed]%>
          <div class="alert alert-warning alert-dismissible fade show mt-2" role="alert">
            <strong><%= flash[:failed] %></strong> 
            <button type="button" class="btn btn-close" data-bs-dismiss="alert" aria-label="Close">&times;</button>
          </div>
        <% end%>


          <%= yield -%>

         <%# <%= yield %>

     </div>

  <%# <%= javascript_pack_tag 'main' %> %>
